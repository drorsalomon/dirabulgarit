extends base 

block head
    title חיפוש נכס | דירה בולגרית
    meta(name="description" content="אתם מוזמנים לחפש את נכס החלומות שלכם בבולגריה באתר דירה בולגרית")
    meta(name="robots" content="index, follow")
    link(rel="canonical" href="https://www.dirabulgarit.com/search")
    link(rel="alternate" href="https://www.dirabulgarit.com/en/search" hreflang="en")
    link(rel="alternate" href="https://www.dirabulgarit.com/search" hreflang="he")
    link(rel="alternate" href="https://www.dirabulgarit.com/ru/search" hreflang="ru")

    meta(property="og:title" content="חיפוש נכס | דירה בולגרית")
    meta(property="og:description" content="אתם מוזמנים לחפש את נכס החלומות שלכם בבולגריה באתר דירה בולגרית")
    meta(property="og:image" content='/img/hero-burgas.webp')
    meta(property="og:image:width" content="1200")
    meta(property="og:image:height" content="630")
    include _headLinksScripts

block content

    .container-fluid.search-results-main-container
        .row.search-headline-row
            .col.search-headline-col 
                img.search-headline-img(src='/img/sectionCover-1.webp' alt='תמונת נוף של בורגס בולגריה') 
                div.search-modal-open-btn-container
                    button.search-modal-open-btn(data-bs-toggle="modal" data-bs-target="#searchModal") חפשו נכס

        .search-container.w-75
            include _searchForm  
                    
        include _searchModal

    .container-fluid.search-results-container
        .row.mainpage-hot-assets-row.justify-content-center.mx-2
            each asset in hotAssets
                include _assetsCards
        .row.mobile-mainpage-hot-assets-row.justify-content-center         
            each asset in hotAssets
                include _mobileAssetsCards            