.col-10.col-md-5.col-xl-3
    .card.asset-card(data-slug=`${asset.slug}`)
        div.asset-card-img-container
            if asset.sold
                .span.badge.asset-card-sold-badge.en-asset-card-sold-badge Sold 
            //- if asset.exclusive && !asset.sold
            //-     .span.badge.asset-card-exclusive-badge.en-asset-card-exclusive-badge Exclusive Property  
            img.card-img-top.asset-card-img(src=`${asset.mainImage}` alt=`${asset.name}` loading="lazy")
        .card-body
            .container-fluid
                .row.asset-card-body-row
                    .col-12.p-1.asset-card-title-col.d-flex.align-items-center.justify-content-center
                        div.card-headline-container
                            .card-title.asset-card-title= asset.name
                    .col-12
                        if asset.project
                            div.card-text-container
                                img.card-icon.en-card-icon(src='/img/icons/building-svgrepo-com.svg' alt='Building icon') 
                                span= asset.project 
                        else
                            div.card-text-container
                                img.card-icon.en-card-icon(src='/img/icons/building-svgrepo-com.svg' alt='Building icon')        
                                span= `-`
                        if asset.price && !asset.sold   
                            div.card-text-container       
                                img.card-icon.en-card-icon(src='/img/icons/price-tag-svgrepo-com.svg' alt='Price tag icon')
                                span.asset-price(data-europrice=`${asset.priceBeginningAt === true ? 'Beginning at ' : ''} €${ new Intl.NumberFormat().format(asset.price)}` data-nisprice=`${asset.priceBeginningAt === true ? 'Beginning at ' : ''} ₪${new Intl.NumberFormat().format(asset.priceNis)}`)
                        else
                            div.card-text-container       
                                img.card-icon.en-card-icon(src='/img/icons/price-tag-svgrepo-com.svg' alt='Price tag icon')    
                                span -
                        if asset.city  
                            div.card-text-container
                                img.card-icon.en-card-icon(src='/img/icons/map-svgrepo-com.svg' alt='Map icon')
                                span= asset.city
                        else
                            div.card-text-container
                                img.card-icon.en-card-icon(src='/img/icons/map-svgrepo-com.svg' alt='Map icon')
                                span= `-`
                        if asset.type
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/house-svgrepo-com.svg' alt='House icon')
                                span= asset.type
                        else 
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/house-svgrepo-com.svg' alt='House icon')
                                span= `-`
                        if asset.oceanView   
                            div.card-text-container  
                                img.card-icon.en-card-icon(src='/img/icons/ocean-sunset-svgrepo-com.svg' alt='Ocean sunset icon')
                                span= asset.oceanView 
                        else
                            div.card-text-container  
                                img.card-icon.en-card-icon(src='/img/icons/ocean-sunset-svgrepo-com.svg' alt='Ocean sunset icon')   
                                span= `-` 
                        if asset.sm
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/ruler-svgrepo-com.svg' alt='Ruler icon')
                                span= asset.sm
                        else
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/ruler-svgrepo-com.svg' alt='Ruler icon')
                                span= `-`
                        if asset.floor 
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/floor-plan-svgrepo-com.svg' alt='Building floor icon')
                                span= asset.floor 
                        else  
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/floor-plan-svgrepo-com.svg' alt='Building floor icon')  
                                span= `-`
                        if asset.rooms       
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/living-room-sofa-svgrepo-com.svg' alt='Living room icon')
                                span= asset.rooms
                        else  
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/living-room-sofa-svgrepo-com.svg' alt='Living room icon')  
                                span= `-`
                        if asset.bathrooms     
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/bath-bathroom-bathtub-svgrepo-com.svg' alt='Bathrooms icon')
                                span= asset.bathrooms
                        else 
                            div.card-text-container    
                                img.card-icon.en-card-icon(src='/img/icons/bath-bathroom-bathtub-svgrepo-com.svg' alt='Bathrooms icon')    
                                span= `-`
                        if asset.terraces     
                            div.card-text-container.card-text-last-container    
                                img.card-icon.en-card-icon(src='/img/icons/balcony-window-svgrepo-com.svg' alt='Balcony icon')
                                span= asset.terraces
                        else  
                            div.card-text-container.card-text-last-container    
                                img.card-icon.en-card-icon(src='/img/icons/balcony-window-svgrepo-com.svg' alt='Balcony icon')   
                                span= `-`