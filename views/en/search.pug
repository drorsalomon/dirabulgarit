extends base 

block head
    title Property Search | Dira Bulgarit
    meta(name="description" content="You are welcome to search for your dream property in Bulgaria on the Dira Bulgarit website")
    meta(name="robots" content="index, follow")
    link(rel="canonical" href="https://www.dirabulgarit.co.il/en/search")
    link(rel="alternate" href="https://www.dirabulgarit.co.il/en/search" hreflang="en")
    link(rel="alternate" href="https://www.dirabulgarit.co.il/search" hreflang="he")
    link(rel="alternate" href="https://www.dirabulgarit.co.il/ru/search" hreflang="ru")

    meta(property="og:title" content="Property Search | Dira Bulgarit")
    meta(property="og:description" content="You are welcome to search for your dream property in Bulgaria on the Dira Bulgarit website")
    meta(property="og:image" content='/img/hero-burgas.webp')
    meta(property="og:image:width" content="1200")
    meta(property="og:image:height" content="630")
    include ../he/_headLinksScripts

block content

    .container-fluid.search-results-main-container
        .row.search-headline-row
            .col.search-headline-col 
                img.search-headline-img(src='/img/sectionCover-1.webp' alt='Image of Burgas, Bulgaria view') 
                div.search-modal-open-btn-container
                    button.search-modal-open-btn(data-bs-toggle="modal" data-bs-target="#searchModal") Open Search

        .search-container.w-75
            include _searchForm  
                    
        include _searchModal

    .container-fluid.search-results-container
        .row.mainpage-hot-assets-row.justify-content-center.mx-2
            each asset in hotAssets
                include _assetsCards
        .row.mobile-mainpage-hot-assets-row.justify-content-center         
            each asset in hotAssets
                include _mobileAssetsCards            